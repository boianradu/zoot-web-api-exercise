{
  "name": "wallet-api",
  "version": "1.0.0",
  "description": "A super cool wallet API",
  "main": "src/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --clear --transpile-only --ignore-watch node_modules ./src/app.ts",
    "build": "rimraf ./dist && tsc",
    "start": "node dist/app.js",
    "db:create": "cd db && ./db-create",
    "db:start": "cd db && ./db-start",
    "db:run-create": "cd db && docker build -t db .",
    "db:run-start": "cd db && docker run --name db_zoot -d -p 5432:5432 db",
    "db:delete": "docker stop db_zoot && docker rm db_zoot",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@prisma/client": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/supertest": "^6.0.2",
    "body-parser": "^1.20.3",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.1",
    "prisma": "^6.0.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "uuid": "^11.0.3"
  },
  "keywords": [
    "zoot"
  ],
  "author": "Radu Boian",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.5",
    "dotenv": "^16.4.5",
    "env-var": "^7.5.0",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "pg": "^8.13.1"
  }
}
