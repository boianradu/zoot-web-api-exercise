{
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "types": [
            "node",
            "jest",
            "express"
        ],
        "target": "ES6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "module": "CommonJS",
        "rootDir": "./src",
        "moduleResolution": "Node",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "sourceMap": true,
        "outDir": "dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    }
}